<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hfad.timeconverter.MainActivity">



    <Button
        android:id="@+id/convert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="180dp"
        android:onClick="convert"
        android:text="@string/convert" />


    <EditText
        android:id="@+id/enter_time"
        android:layout_width="162dp"
        android:layout_height="44dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="100dp"
        android:inputType="textPersonName"
        android:gravity="center"
        android:digits="abcdefABCDEF0123456789"
        android:maxLength="16" />


    <TextView
        android:id="@+id/enter_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:paddingTop="70dp"
        android:textSize="20dp"
        android:text="@string/enter_time" />


    <TextView
        android:id="@+id/timeInSat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="250dp"
        android:textSize="15dp"
        android:text="@string/timeInSat" />


    <TextView
        android:id="@+id/timeInSat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="290dp"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


</FrameLayout>